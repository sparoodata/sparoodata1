<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SparooData Dashboard</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <div class="container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <h2 class="logo">SparooData</h2>
      <nav>
        <ul>
          <li><a href="/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
          <li><a href="#" id="view-instances"><i class="fas fa-server"></i> Instances</a></li>
          <li><a href="#"><i class="fas fa-cog"></i> Settings</a></li>
        </ul>
      </nav>
      <div class="sidebar-footer">
        <a href="/logout" class="logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</a>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <header class="content-header">
        <div class="header-title">
          <h1>Welcome, <%= user.displayName || user.nickname || user.id %></h1>
        </div>
        <div class="header-actions">
          <button id="select-project-btn" class="btn btn-primary">Select Project</button>
        </div>
      </header>

      <!-- Organizations Section -->
      <section>
        <h2>Your Organizations</h2>
        <% if (organizations.length > 0) { %>
          <ul>
            <% organizations.forEach(org => { %>
              <li>
                <span><%= org.org_name %></span>
                <button class="btn btn-secondary" onclick="selectOrganization('<%= org._id %>')">View Projects</button>
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p>No organizations found. <button class="btn btn-primary" onclick="createOrganization()">Create Organization</button></p>
        <% } %>
      </section>

      <!-- Projects Section -->
      <section id="projects-section" style="display: none;">
        <h2>Your Projects</h2>
        <ul id="projects-list"></ul>
        <button class="btn btn-primary" onclick="createProject()">Create Project</button>
      </section>

      <!-- Instances Section -->
      <section id="instances-section">
        <h2>Your Instances</h2>
        <% if (instances.length > 0) { %>
          <ul>
            <% instances.forEach(instance => { %>
              <li>
                <span><%= instance.instance_name %></span> - 
                <span><%= instance.database_type %></span>
                <button class="btn btn-secondary" onclick="viewInstanceDetails('<%= instance._id %>')">Details</button>
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p>No instances found. <button class="btn btn-primary" onclick="createInstance()">Create Instance</button></p>
        <% } %>
      </section>
    </main>

    <!-- Right Sidebar -->
    <aside id="right-sidebar" class="right-sidebar">
      <div class="sidebar-header">
        <h2 id="sidebar-title">Details</h2>
        <button id="close-sidebar-btn" class="close-sidebar-btn">&times;</button>
      </div>
      <div id="sidebar-body" class="sidebar-body">
        <!-- Content dynamically added -->
      </div>
    </aside>
  </div>

  <script>
    // Event listeners for sidebar and buttons
    document.getElementById('close-sidebar-btn').addEventListener('click', () => {
      document.getElementById('right-sidebar').classList.remove('open');
    });

    // Fetch and display projects for selected organization
    function selectOrganization(orgId) {
      fetch(`/organization/${orgId}/projects`)
        .then(response => response.json())
        .then(projects => {
          const projectList = document.getElementById('projects-list');
          projectList.innerHTML = ''; // Clear existing projects
          projects.forEach(project => {
            const listItem = document.createElement('li');
            listItem.innerHTML = `
              <span>${project.name}</span>
              <button class="btn btn-secondary" onclick="selectProject('${project._id}')">View Instances</button>
            `;
            projectList.appendChild(listItem);
          });
          document.getElementById('projects-section').style.display = 'block';
        })
        .catch(err => console.error('Error fetching projects:', err));
    }

    // Fetch and display instances for selected project
    function selectProject(projectId) {
      fetch(`/project/${projectId}/instances`)
        .then(response => response.json())
        .then(instances => {
          const instanceList = document.getElementById('instances-section');
          instanceList.innerHTML = '<h2>Your Instances</h2>';
          if (instances.length > 0) {
            const ul = document.createElement('ul');
            instances.forEach(instance => {
              const listItem = document.createElement('li');
              listItem.innerHTML = `
                <span>${instance.instance_name}</span> - <span>${instance.database_type}</span>
                <button class="btn btn-secondary" onclick="viewInstanceDetails('${instance._id}')">Details</button>
              `;
              ul.appendChild(listItem);
            });
            instanceList.appendChild(ul);
          } else {
            instanceList.innerHTML += '<p>No instances found. <button class="btn btn-primary" onclick="createInstance()">Create Instance</button></p>';
          }
        })
        .catch(err => console.error('Error fetching instances:', err));
    }

    // View instance details
    function viewInstanceDetails(instanceId) {
      fetch(`/instance/${instanceId}`)
        .then(response => response.json())
        .then(instance => {
          const sidebar = document.getElementById('right-sidebar');
          const sidebarBody = document.getElementById('sidebar-body');
          sidebarBody.innerHTML = `
            <p><strong>Instance Name:</strong> ${instance.instance_name}</p>
            <p><strong>Database Type:</strong> ${instance.database_type}</p>
            <p><strong>Status:</strong> ${instance.status}</p>
          `;
          sidebar.classList.add('open');
        })
        .catch(err => console.error('Error fetching instance details:', err));
    }

    // Create organization
    function createOrganization() {
      // Logic to show a form or redirect to create-organization route
      alert('Open create organization form');
    }

    // Create project
    function createProject() {
      // Logic to show a form or redirect to create-project route
      alert('Open create project form');
    }

    // Create instance
    function createInstance() {
      // Logic to show a form or redirect to create-instance route
      alert('Open create instance form');
    }
  </script>
</body>
</html>
